{
  "manifest_version": 3,
  "name": "HootTime",
  "version": "1.0",
  "description": "Convert highlighted timestamps to UTC and track them across tabs",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "HootTime"
  }
} 